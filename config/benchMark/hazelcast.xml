<hazelcast xsi:schemaLocation="http://www.hazelcast.com/schema/config
                               http://www.hazelcast.com/schema/config/hazelcast-config-3.6.xsd"
           xmlns="http://www.hazelcast.com/schema/config"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <group>
        <name>yardstick</name>
    </group>

    <network>
        <port port-count="200" auto-increment="true">5701</port>
        <join>
            <multicast enabled="false"/>
            <tcp-ip enabled="true">
                <!--MEMBERS-->
            </tcp-ip>
        </join>
    </network>

    <serialization>
        <data-serializable-factories>
            <data-serializable-factory factory-id="1">org.yardstickframework.hazelcast.SampleValueSerializableFactory</data-serializable-factory>
        </data-serializable-factories>
    </serialization>

    <cache name="jcache*">
        <backup-count>1</backup-count>
        <async-backup-count>0</async-backup-count>
        <in-memory-format>BINARY</in-memory-format>
    </cache>

    <map name="map*">
        <statistics-enabled>false</statistics-enabled>
        <read-backup-data>true</read-backup-data>
    </map>

    <map name="query*">
        <statistics-enabled>false</statistics-enabled>
        <read-backup-data>true</read-backup-data>
    </map>

    <map name="objmap*">
        <in-memory-format>OBJECT</in-memory-format>
        <statistics-enabled>false</statistics-enabled>
        <read-backup-data>true</read-backup-data>
    </map>

    <properties>
        <property name="hazelcast.slow.operation.detector.stacktrace.logging.enabled">true</property>
    </properties>

</hazelcast>